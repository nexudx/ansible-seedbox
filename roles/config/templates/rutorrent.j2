<VirtualHost *:80>
        ServerAdmin {{ ru_email }}

        DocumentRoot {{ ru_dir }}
        <Directory {{ ru_dir }}>
                Options Indexes FollowSymLinks MultiViews
                AllowOverride None
                Order allow,deny
                allow from all
        </Directory>

        ErrorLog ${APACHE_LOG_DIR}/error.log
        LogLevel warn
        CustomLog ${APACHE_LOG_DIR}/access.log combined

</VirtualHost>
